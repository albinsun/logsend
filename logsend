#!/bin/bash


# ---------- config


# ---------- overtune
self=`basename $0`
tag="logsend"    # -t

function usage() {
echo "
usage: $self [-h] [-t <tag>] [msg]

syslog sender extends logger shell command

OPTIONS:
   -h      Show this message
   -t      Prefix event by tag
"
}


# argument parsing
while getopts t:h opt
do
    case $opt in
	h)
            usage; exit 0
	    ;;
        t)
            tag=$OPTARG
	    ;;
        *)
            usage; exit 1
	    ;;
    esac
done
shift $(( $OPTIND - 1 ))

logger -s -t $tag "$@"
